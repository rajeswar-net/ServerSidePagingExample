@using PagedList.Mvc
@model  PagedList.IPagedList<ServerSidePagingExample.ViewModel.SalesOrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
    <div class="panel-heading">
        <div class="col-md-8">
            <h3>
                <i class="fa fa-table"></i>
                <span>Paged List</span>
            </h3>
        </div>
    </div>
</div>
<div class="row">
    <div class="well bs-component">
        <br />
        <div class="row">
            <div>
                <table class="table table-striped table-bordered table-hover" cellspacing="0" align="center">
                    <thead>
                        <tr>
                            <th>Sr</th>
                            <th>Order Track Number</th>
                            <th>Quantity</th>
                            <th>Product Name</th>
                            <th>Special Offer</th>
                            <th>Unit Price</th>
                            <th>Unit Price Discount</th>
                        </tr>
                    </thead>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].Sr</td>
                            <td>@Model[i].OrderTrackNumber</td>
                            <td>@Model[i].Quantity</td>
                            <td>@Model[i].ProductName</td>
                            <td>@Model[i].SpecialOffer</td>
                            <td>@Model[i].UnitPrice</td>
                            <td>@Model[i].UnitPriceDiscount</td>
                        </tr>

                    }
                </table>
            </div>
            <div id="container" style="margin-left: 20px">
                <p></p>
                <p></p>
                <div class="pagination" style="margin-left: 400px">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                    of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>  